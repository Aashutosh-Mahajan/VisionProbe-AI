# VPIP Backend Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# OpenAI API Key (Required for AI functionality)
OPENAI_API_KEY=your_openai_api_key_here

# Django Secret Key (Generate a new one for production)
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-in-production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Use SQLite for development (default)
# For PostgreSQL in production, use format:
# DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins for production (comma-separated)
# Example: https://yourfrontend.com,https://www.yourfrontend.com
CORS_ALLOWED_ORIGINS=

# ===========================================
# AI MODEL CONFIGURATION
# ===========================================

# GPT model to use (default: gpt-5.1)
# Options: gpt-5.1, gpt-4-turbo, gpt-3.5-turbo
GPT_MODEL_NAME=gpt-5.1

# Maximum cost per request in INR (for tracking)
MAX_COST_PER_REQUEST_INR=7.0

# ===========================================
# LOGGING
# ===========================================

# Django log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO
